@model CharityCause


@{
    ViewData["Title"] = "Creaza o cauza caritabila noua";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Adauga o cauză nouă</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="ImagePreview" />
                    </div>
                    @*Form part*@
                    <div class="form-group">
                        <label asp-for="Image" class="control-label"></label>
                        <input asp-for="Image" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    @*Buttons*@
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" /> @*Submit a post reqest to the create action result*@
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>@*retrun to all*@
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts{ @*jQuery*@
<script>
    @*Still render the image even after an error message ocure *@
    $(document).ready(function () {
        var output = document.getElementById('ImagePreview');
        output.src = $("#Image").val();
    })

@**@
    $("#Image").on("change", function () {
        var output = document.getElementById('ImagePreview');
        output.src = $(this).val();
    })
</script>
}
