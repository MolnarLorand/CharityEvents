@*Define model, what data file i want to display with this file(list of events*@

@model IEnumerable<Event>

@*Definde viewData*@
@{ 
    ViewData["Title"] = "Lista Evenimentelor";
}
<div class="row">
    <div class="col-md-12 offset-md-0">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model =>model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.EventName)</th>
                    <th>@Html.DisplayNameFor(model => model.EventPeriod)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)@*Model ->> IEnumerable<Events>*@
                {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.Logo" alt="@item.EventName" style="max-width: 150px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.EventName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.EventPeriod)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Description)

                    </td>
                    <td class="align-middle">
                        <a class=" btn btn-outline-primary"><i class="bi bi-pencil-fill "></i>Edit </a>
                        <a class=" btn btn-outline-info"><i class="bi bi-eye"></i>Details </a>
                        <a class=" btn btn-outline-danger"><i class="bi bi-trash"></i>Delete </a>
                    </td>
                </tr>
                }
            </tbody>
            <tr>
                <td> </td>
            </tr>
        </table>
    </div>
</div>