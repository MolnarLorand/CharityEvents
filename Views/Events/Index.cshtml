@*Define model, what data file i want to display with this file(list of events*@

@model IEnumerable<Event>
@*Definde viewData*@
@{
    ViewData["Title"] = "Lista Evenimentelor";
}
<div class="row">
    <div class="col-md-12 offset-md-0">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.EventName)</th>
                    <th>@Html.DisplayNameFor(model => model.EventPeriod)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Actiuni</th>
                    }

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)@*Model ->> IEnumerable<Events>*@
                {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.Logo" alt="@item.EventName" style="max-width: 150px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.EventName)
                    </td>
                    <td class="align-middle" style="width:10%">
                        @Html.DisplayFor(modelItem => item.EventPeriod)
                    </td>
                    <td class=" align-middle" style="width:30%">
                        @Html.DisplayFor(modelItem => item.Description)

                    </td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <td class="align-middle">
                            <a class=" btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill "></i>Editează</a> |
                            <a class=" btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Detalii</a> |
                            <a class=" btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Sterge</a>
                        </td>
                    }

                </tr>
                }
            </tbody>
            <tr>
                <td> </td>
            </tr>
        </table>
    </div>
</div>

