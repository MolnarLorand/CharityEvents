@model Event


@{
    ViewData["Title"] = "Stergere eveniment";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Confirmare stergere eveniment - @Model.EventName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="LogoPreview" />
                </div>
                <div class="form-group">
                    <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" readonly />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EventName" class="control-label"></label>
                    <input asp-for="EventName" class="form-control" readonly />
                    <span asp-validation-for="EventName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EventPeriod" class="control-l abel"></label>
                    <input asp-for="EventPeriod" type="date" class="form-control" readonly />
                    <span asp-validation-for="EventPeriod" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                @*Buttons*@
                <div class="form-group">
                    <form asp-action="DeleteConfirmed" >
                        <input type="hidden" asp-for="Id"/>
                        <input type="submit" value="Confirm" class="btn btn-danger float-right"/>
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Înapoi</a>@*retrun to all*@
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{ @*jQuery*@
<script>
    @*Still render the image even after an error message ocure *@
    $(document).ready(function () {
        var output = document.getElementById('LogoPreview');
        output.src = $("#Logo").val();
    })

    $("#Logo").on("change", function () {
        var output = document.getElementById('LogoPreview');
        output.src = $(this).val();
    })
</script>
}