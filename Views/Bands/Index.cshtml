@*Define model, what data file i want to display with this file(list of events*@

@model IEnumerable<Band>
@*Definde viewData*@
@{
    ViewData["Title"] = "Lista Trupelor";
}
<div class="row">
    @foreach (var item in Model)@*modle->ien band*@
    {
        <div class="col-md-6 col-xs-4 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class=" row g-0">
                    @*row g -> padding*@
                    <div class="col-md-12">
                        <div class="card-header text-white bg-success">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name

                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.Logo" width="100%" @*height="100%"*@ alt="@item.Name" />
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Categorie: </b>@item.BandCategory</p>
                                                        <p class="card-text"><b>Membri formatie: </b>@item.BandMembers</p>
                            <p class="card-text"><b>Data Concert: </b>@item.ConcertDate.ToString("dd MMM yyyy")</p>
                            <p class="card-text">
                                <b>Info Concert: </b>
                               
                                @if (item.ConcertDate.ToString("dd MMM yyyy") == DateTime.Now.ToString("dd MMM yyyy"))
                                {
                                    <span class="badge bg-success text-white">În desfășurare</span>
                                }
                                else if (DateTime.Now < item.ConcertDate)
                                {
                                    <span class="badge bg-primary text-white">În așteptare</span>
                                }
                                else if(DateTime.Now > item.ConcertDate)
                                {
                                    <span class="badge bg-danger text-white">Evenimen finalizat</span>
                                }

                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i>Arata Detalii</a>
                                <a class="btn btn-outline-success" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@item.Id"><i class="bi bi-cart-check"></i>Sustine(@item.DonationPrice.ToString("c"))</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

@await Html.PartialAsync("_CreateItem", "Bands")
